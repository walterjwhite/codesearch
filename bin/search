#!/bin/sh

. _LIBRARY_PATH_/git/include.sh
. _LIBRARY_PATH_/_APPLICATION_NAME_/search.cli.sh
. _LIBRARY_PATH_/_APPLICATION_NAME_/search.contents.sh
. _LIBRARY_PATH_/_APPLICATION_NAME_/search.files.sh
. _LIBRARY_PATH_/_APPLICATION_NAME_/search.log.sh

_do_search() {
    . _LIBRARY_PATH_/git/project.directory.sh
    
    if [ -z "$_SEARCH_FILENAMES_ONLY" ] && [ -z "$_SEARCH_LOG_ONLY" ]
    then
        _search_contents
    fi

    if [ -z "$_SEARCH_CONTENTS_ONLY" ] && [ -z "$_SEARCH_LOG_ONLY" ]
    then
        _search_filename
    fi

    if [ -z "$_SEARCH_CONTENTS_ONLY" ] && [ -z "$_SEARCH_FILENAMES_ONLY" ]
    then
        _search_log
    fi
}

_search() {
    gco $_BRANCH
    _do_search
}

_FUNCTION="csearch $_SEARCH_ARGS"

if [ -n "$_ALL" ]
then
    for _PROJECT in $(find _APPLICATION_DATA_PATH_ -type d | grep \\.project$)
    do
        cd $(cat $_PROJECT/.config)

        _ORIGINAL_BRANCH=$(gcb)
        for _BRANCH_PATH in $(find $_PROJECT -type d -maxdepth 1 | grep -v \\.project$)
        do
            _BRANCH=$(basename $_BRANCH_PATH)
            _search
        done

        gco "$_ORIGINAL_BRANCH"
    done
else
    _do_search
fi
